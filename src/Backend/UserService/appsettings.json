{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "UserDatabase": "Host=postgres;Port=5432;Database=secure_messenger;Username=postgres;Password=postgres"
  },
  "JwtSettings": {
    "SecretKey": "your-secret-key-min-256-bits-for-HS256",
    "Issuer": "SecureMessenger.UserService",
    "Audience": "SecureMessenger.Client",
    "ExpirationMinutes": 15
  },
  "DeletionSettings": {
    "GracePeriodDays": 30,
    "OverwritePasses": 3
  }
}
