<!-- Sprint 9: Settings View -->
<UserControl x:Class="MessengerClient.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="40">
            <TextBlock Text="Einstellungen" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Margin="0,0,0,30"/>

            <!-- Profile Section -->
            <materialDesign:Card Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Profil" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Margin="0,0,0,15"/>
                    
                    <TextBox materialDesign:HintAssist.Hint="Anzeigename"
                            Text="{Binding DisplayName}"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0,0,0,10"/>
                </StackPanel>
            </materialDesign:Card>

            <!-- MFA Section -->
            <materialDesign:Card Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Sicherheit" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Zwei-Faktor-Authentifizierung" 
                                      FontWeight="Bold"/>
                            <TextBlock Text="Zusätzliche Sicherheit für Ihr Konto" 
                                      Foreground="Gray" 
                                      FontSize="12"/>
                        </StackPanel>

                        <Button Grid.Column="1" 
                               Content="{Binding MfaEnabled, Converter={StaticResource MfaButtonTextConverter}, FallbackValue='Aktivieren'}"
                               Command="{Binding EnableMfaCommand}"
                               Style="{StaticResource MaterialDesignRaisedButton}"/>
                    </Grid>

                    <StackPanel Visibility="{Binding ShowMfaSetup, Converter={StaticResource BoolToVisibilityConverter}}"
                               Margin="0,20,0,0">
                        <TextBlock Text="QR-Code scannen:" 
                                  FontWeight="Bold" 
                                  Margin="0,0,0,10"/>
                        
                        <Image Source="{Binding QrCodeUrl}" 
                              Width="200" 
                              Height="200" 
                              Stretch="Uniform"
                              Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Oder manuell eingeben:" 
                                  FontWeight="Bold" 
                                  Margin="0,10,0,5"/>
                        <TextBlock Text="{Binding SecretKey}" 
                                  FontFamily="Consolas" 
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <!-- Appearance Settings -->
            <materialDesign:Card Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Darstellung" 
                              FontSize="18" 
                              FontWeight="Bold" 
                              Margin="0,0,0,15"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Dark Mode" 
                                  VerticalAlignment="Center"/>
                        
                        <ToggleButton Grid.Column="1" 
                                     IsChecked="{Binding DarkModeEnabled}"
                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <Button Content="ABMELDEN" 
                   Command="{Binding LogoutCommand}"
                   Style="{StaticResource MaterialDesignRaisedButton}"
                   Background="#F44336"
                   BorderBrush="#F44336"
                   Height="40"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
