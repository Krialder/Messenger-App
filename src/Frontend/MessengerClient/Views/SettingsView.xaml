<!-- PSEUDO-CODE - Sprint 9: Settings View -->
<UserControl x:Class="SecureMessenger.Client.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ScrollViewer>
        <StackPanel Margin="20">
            <!-- Profile Section -->
            <TextBlock Text="Profil" Style="{StaticResource SectionHeaderStyle}"/>
            
            <!-- Theme Selection -->
            <TextBlock Text="Theme" Style="{StaticResource LabelTextStyle}" Margin="0,20,0,5"/>
            <ComboBox>
                <!-- PSEUDO: ItemsSource="{Binding AvailableThemes}" -->
                <!-- PSEUDO: SelectedItem="{Binding SelectedTheme}" -->
            </ComboBox>
            
            <!-- MFA Section -->
            <TextBlock Text="Sicherheit" Style="{StaticResource SectionHeaderStyle}" Margin="0,30,0,10"/>
            
            <CheckBox Content="Multi-Factor Authentication aktiviert" 
                      Margin="0,10,0,10">
                <!-- PSEUDO: IsChecked="{Binding MfaEnabled}" -->
            </CheckBox>
            
            <Button Content="MFA verwalten" 
                    Style="{StaticResource SecondaryButtonStyle}">
                <!-- PSEUDO: Command="{Binding ManageMfaCommand}" -->
            </Button>
            
            <!-- Privacy Mode (Layer 3) -->
            <CheckBox Content="Privacy Mode (Layer 3 Display Encryption)" 
                      Margin="0,20,0,10">
                <!-- PSEUDO: IsChecked="{Binding PrivacyModeEnabled}" -->
            </CheckBox>
            
            <!-- DSGVO Section -->
            <TextBlock Text="Datenschutz (DSGVO)" Style="{StaticResource SectionHeaderStyle}" Margin="0,30,0,10"/>
            
            <Button Content="Daten exportieren" 
                    Style="{StaticResource SecondaryButtonStyle}"
                    Margin="0,10,0,10">
                <!-- PSEUDO: Command="{Binding ExportDataCommand}" -->
            </Button>
            
            <Button Content="Konto lÃ¶schen" 
                    Style="{StaticResource DangerButtonStyle}">
                <!-- PSEUDO: Command="{Binding DeleteAccountCommand}" -->
            </Button>
        </StackPanel>
    </ScrollViewer>
</UserControl>
