<UserControl x:Class="MessengerClient.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:MessengerClient.ViewModels"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="400"
             d:DataContext="{d:DesignInstance Type=viewModels:RegisterViewModel}">
    
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,60,40,40" HorizontalAlignment="Center" Width="320">
                
                <!-- Logo & Title -->
                <materialDesign:PackIcon Kind="AccountPlus" 
                                         Width="80" Height="80" 
                                         HorizontalAlignment="Center" 
                                         Foreground="{DynamicResource PrimaryHueMidBrush}"
                                         Margin="0,0,0,20"/>
                
                <TextBlock Text="Konto erstellen" 
                           FontSize="28"
                           FontWeight="Bold" 
                           HorizontalAlignment="Center"
                           Foreground="{DynamicResource MaterialDesignBody}"
                           Margin="0,0,0,30"/>
                
                <!-- Display Name Input -->
                <TextBox x:Name="DisplayNameTextBox"
                         materialDesign:HintAssist.Hint="Anzeigename" 
                         Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,20"/>
                
                <!-- Email Input -->
                <TextBox x:Name="EmailTextBox"
                         materialDesign:HintAssist.Hint="E-Mail" 
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         Margin="0,0,0,20"/>
                
                <!-- Password Input -->
                <PasswordBox x:Name="PasswordBox"
                            materialDesign:HintAssist.Hint="Passwort (mind. 12 Zeichen)"
                            Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                            Margin="0,0,0,20"/>
                
                <!-- Confirm Password Input -->
                <PasswordBox x:Name="ConfirmPasswordBox"
                            materialDesign:HintAssist.Hint="Passwort bestätigen"
                            Style="{StaticResource MaterialDesignOutlinedPasswordBox}"
                            Margin="0,0,0,20"/>
                
                <!-- Terms & Conditions -->
                <CheckBox x:Name="AcceptTermsCheckBox"
                          Content="Ich akzeptiere die Datenschutzerklärung und AGB"
                          IsChecked="{Binding AcceptTerms}"
                          Margin="0,0,0,20"
                          Style="{StaticResource MaterialDesignCheckBox}"/>
                
                <!-- Security Warning -->
                <Border Background="#FFF3CD" 
                        BorderBrush="#FFEAA7" 
                        BorderThickness="1"
                        CornerRadius="4"
                        Padding="15"
                        Margin="0,0,0,20">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <materialDesign:PackIcon Kind="Warning" 
                                                     Width="20" Height="20" 
                                                     Foreground="#856404"
                                                     Margin="0,0,8,0"/>
                            <TextBlock Text="Wichtiger Hinweis" 
                                       FontWeight="Bold"
                                       Foreground="#856404"/>
                        </StackPanel>
                        <TextBlock Text="Passwort vergessen = Datenverlust! Ihre Daten sind End-to-End verschlüsselt. Ohne Ihr Passwort können wir Ihre Daten nicht wiederherstellen."
                                   TextWrapping="Wrap"
                                   Foreground="#856404"
                                   FontSize="12"/>
                    </StackPanel>
                </Border>
                
                <!-- Error Message -->
                <TextBlock Text="{Binding ErrorMessage}" 
                          Foreground="#F44336"
                          TextWrapping="Wrap"
                          Margin="0,0,0,10"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                
                <!-- Success Message -->
                <TextBlock Text="{Binding SuccessMessage}" 
                          Foreground="#4CAF50"
                          TextWrapping="Wrap"
                          Margin="0,0,0,10"
                          Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}"/>
                
                <!-- Loading Indicator -->
                <ProgressBar IsIndeterminate="True"
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                            Margin="0,0,0,20"/>
                
                <!-- Register Button -->
                <Button Content="KONTO ERSTELLEN" 
                       Command="{Binding RegisterCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Background="{DynamicResource PrimaryHueMidBrush}"
                       Height="45"
                       FontWeight="Bold"
                       Margin="0,20,0,20"
                       IsEnabled="{Binding CanRegister}"/>
                
                <!-- Back to Login -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0">
                    <TextBlock Text="Bereits ein Konto? " 
                               Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                    <Button Content="Anmelden" 
                           Command="{Binding NavigateToLoginCommand}"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                           FontWeight="Bold"/>
                </StackPanel>
                
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
