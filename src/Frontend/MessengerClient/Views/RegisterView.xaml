<UserControl x:Class="SecureMessenger.Client.Views.RegisterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="400"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    
    <Grid Background="{DynamicResource MaterialDesignPaper}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,60,40,40">
                <!-- Header -->
                <TextBlock Text="Konto erstellen" 
                           Style="{StaticResource TitleTextStyle}"
                           FontSize="32"
                           HorizontalAlignment="Center"/>
                
                <!-- Registration Form -->
                <StackPanel Margin="0,40,0,0">
                    <!-- Username -->
                    <TextBlock Text="Benutzername" 
                               Style="{StaticResource LabelTextStyle}"/>
                    <TextBox Style="{StaticResource InputTextBoxStyle}"
                             Margin="0,5,0,5"
                             materialDesign:HintAssist.Hint="Benutzername">
                        <!-- PSEUDO: Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" -->
                    </TextBox>
                    <TextBlock Style="{StaticResource HintTextStyle}"
                               Text="3-50 Zeichen, alphanumerisch"
                               Margin="0,0,0,15"/>
                    
                    <!-- Email -->
                    <TextBlock Text="E-Mail" 
                               Style="{StaticResource LabelTextStyle}"/>
                    <TextBox Style="{StaticResource InputTextBoxStyle}"
                             Margin="0,5,0,20"
                             materialDesign:HintAssist.Hint="E-Mail">
                        <!-- PSEUDO: Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" -->
                    </TextBox>
                    
                    <!-- Password -->
                    <TextBlock Text="Passwort" 
                               Style="{StaticResource LabelTextStyle}"/>
                    <PasswordBox Style="{StaticResource InputPasswordBoxStyle}"
                                 Margin="0,5,0,5"
                                 materialDesign:HintAssist.Hint="Passwort (min. 8 Zeichen)">
                        <!-- PSEUDO: Password binding -->
                    </PasswordBox>
                    <TextBlock Style="{StaticResource HintTextStyle}"
                               Text="Mind. 12 Zeichen, 1 Gro√übuchstabe, 1 Zahl, 1 Sonderzeichen"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"/>
                    
                    <!-- Password Confirmation -->
                    <TextBlock Text="Passwort best√§tigen" 
                               Style="{StaticResource LabelTextStyle}"/>
                    <PasswordBox Style="{StaticResource InputPasswordBoxStyle}"
                                 Margin="0,5,0,20"
                                 materialDesign:HintAssist.Hint="Passwort best√§tigen">
                        <!-- PSEUDO: Password confirmation binding -->
                    </PasswordBox>
                    
                    <!-- Terms & Conditions -->
                    <CheckBox Margin="0,10,0,20">
                        <!-- PSEUDO: IsChecked="{Binding AcceptTerms}" -->
                        <TextBlock TextWrapping="Wrap">
                            <Run Text="Ich akzeptiere die "/>
                            <Hyperlink>Datenschutzerkl√§rung</Hyperlink>
                            <Run Text=" und "/>
                            <Hyperlink>AGB</Hyperlink>
                        </TextBlock>
                    </CheckBox>
                    
                    <!-- Security Notice -->
                    <Border Background="{DynamicResource WarningBackgroundBrush}"
                            BorderBrush="{DynamicResource WarningBorderBrush}"
                            BorderThickness="1"
                            CornerRadius="5"
                            Padding="15"
                            Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="‚ö†Ô∏è Wichtiger Hinweis" 
                                       FontWeight="Bold"
                                       Margin="0,0,0,5"/>
                            <TextBlock TextWrapping="Wrap">
                                <Run Text="Passwort vergessen = Datenverlust!"/>
                                <LineBreak/>
                                <Run Text="Ihre Daten sind End-to-End verschl√ºsselt. Ohne Ihr Passwort k√∂nnen wir Ihre Daten nicht wiederherstellen."/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                    
                    <!-- Register Button -->
                    <Button Content="Konto erstellen" 
                            Style="{StaticResource PrimaryButtonStyle}"
                            Height="45"
                            Margin="0,10,0,15"
                            Command="{Binding RegisterCommand}"
                            IsEnabled="{Binding CanRegister}">
                    </Button>
                    
                    <!-- Error Message -->
                    <TextBlock Style="{StaticResource ErrorTextStyle}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"
                               Text="{Binding ErrorMessage}">
                    </TextBlock>
                    
                    <!-- Success Message -->
                    <TextBlock Style="{StaticResource SuccessTextStyle}"
                               TextWrapping="Wrap"
                               Margin="0,0,0,15"
                               Text="{Binding SuccessMessage}">
                    </TextBlock>
                    
                    <!-- Loader -->
                    <ProgressBar IsIndeterminate="True"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}"
                                 Margin="0,0,0,15"/>
                    
                    <!-- Back to Login -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock Text="Bereits ein Konto? " 
                                   Style="{StaticResource BodyTextStyle}"/>
                        <TextBlock Text="Anmelden" 
                                   Style="{StaticResource LinkTextStyle}"
                                   Command="{Binding NavigateToLoginCommand}">
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
