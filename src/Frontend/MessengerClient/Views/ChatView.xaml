<!-- PSEUDO-CODE - Sprint 8: Chat View -->
<UserControl x:Class="SecureMessenger.Client.Views.ChatView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Grid Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- Header -->
            <RowDefinition Height="*"/>     <!-- Messages -->
            <RowDefinition Height="Auto"/>  <!-- Input -->
        </Grid.RowDefinitions>
        
        <!-- Chat Header -->
        <Border Grid.Row="0" Background="{DynamicResource SurfaceBrush}" Padding="15">
            <Grid>
                <StackPanel Orientation="Horizontal">
                    <Ellipse Width="40" Height="40" Fill="{DynamicResource AccentBrush}"/>
                    <StackPanel Margin="10,0,0,0" VerticalAlignment="Center">
                        <TextBlock Text="{Binding ContactName}" FontWeight="Bold"/>
                        <TextBlock Text="{Binding OnlineStatus}" Foreground="Gray" FontSize="12"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Actions -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <!-- PSEUDO: Search, Call, Video, Settings buttons -->
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Messages List -->
        <ListBox Grid.Row="1" Background="Transparent">
            <!-- PSEUDO: ItemsSource="{Binding Messages}" -->
            <!-- PSEUDO: ItemTemplate for message bubbles -->
        </ListBox>
        
        <!-- Message Input -->
        <Border Grid.Row="2" Background="{DynamicResource SurfaceBrush}" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0" 
                         Style="{StaticResource InputTextBoxStyle}"
                         MinHeight="40">
                    <!-- PSEUDO: Text="{Binding MessageText, UpdateSourceTrigger=PropertyChanged}" -->
                </TextBox>
                
                <Button Grid.Column="1" 
                        Content="Senden"
                        Style="{StaticResource PrimaryButtonStyle}"
                        Margin="10,0,0,0">
                    <!-- PSEUDO: Command="{Binding SendMessageCommand}" -->
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
