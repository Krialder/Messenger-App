<Window x:Class="MessengerClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:views="clr-namespace:MessengerClient.Views"
        xmlns:viewModels="clr-namespace:MessengerClient.ViewModels"
        Title="Secure Messenger" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">
    
    <materialDesign:DialogHost>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <materialDesign:ColorZone Grid.Row="0" Mode="PrimaryMid" Padding="16">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <materialDesign:PackIcon Kind="MessageLock" Width="32" Height="32" 
                                                VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="Secure Messenger" 
                                  FontSize="20" 
                                  VerticalAlignment="Center" 
                                  FontWeight="Bold"/>
                    </StackPanel>
                </DockPanel>
            </materialDesign:ColorZone>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <materialDesign:ColorZone Grid.Column="0" Mode="Standard" Width="200">
                    <StackPanel Margin="0,20,0,0">
                        <Button Content="Chats" 
                               Command="{Binding NavigateToChatCommand}"
                               Style="{StaticResource MaterialDesignFlatButton}"
                               Height="50"
                               HorizontalContentAlignment="Left"
                               Padding="20,0,0,0"/>
                        
                        <Button Content="Kontakte" 
                               Command="{Binding NavigateToContactsCommand}"
                               Style="{StaticResource MaterialDesignFlatButton}"
                               Height="50"
                               HorizontalContentAlignment="Left"
                               Padding="20,0,0,0"/>
                        
                        <Button Content="Einstellungen" 
                               Command="{Binding NavigateToSettingsCommand}"
                               Style="{StaticResource MaterialDesignFlatButton}"
                               Height="50"
                               HorizontalContentAlignment="Left"
                               Padding="20,0,0,0"/>
                    </StackPanel>
                </materialDesign:ColorZone>

                <ContentControl Grid.Column="1" Content="{Binding CurrentViewModel}">
                    <ContentControl.Resources>
                        <DataTemplate DataType="{x:Type viewModels:ChatViewModel}">
                            <views:ChatView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type viewModels:ContactsViewModel}">
                            <views:ContactsView/>
                        </DataTemplate>
                        <DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
                            <views:SettingsView/>
                        </DataTemplate>
                    </ContentControl.Resources>
                </ContentControl>
            </Grid>
        </Grid>
    </materialDesign:DialogHost>
</Window>
