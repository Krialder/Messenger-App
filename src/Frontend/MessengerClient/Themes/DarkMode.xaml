<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- PSEUDO CODE: Dark Mode Theme (Default) -->
    <!-- Color Palette: Deep Purple + Dark Gray -->

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#1E1E1E"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#2D2D30"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#3E3E42"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#B0B0B0"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#6B6B6B"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#673AB7"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#7E57C2"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#5E35B1"/>
    
    <!-- Message Bubbles -->
    <SolidColorBrush x:Key="SentMessageBrush" Color="#673AB7"/>
    <SolidColorBrush x:Key="ReceivedMessageBrush" Color="#3E3E42"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#4A4A4A"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="OnlineBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="OfflineBrush" Color="#9E9E9E"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    
    <!-- PSEUDO CODE: Apply styles to controls -->
    <!-- Button, TextBox, ListBox, etc. will inherit these colors -->

</ResourceDictionary>
