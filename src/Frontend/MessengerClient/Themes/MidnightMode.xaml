<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- PSEUDO CODE: Midnight Mode Theme -->
    <!-- Color Palette: Pure Black + Blue Accents (OLED-friendly) -->

    <!-- Background Colors -->
    <SolidColorBrush x:Key="PrimaryBackgroundBrush" Color="#000000"/>
    <SolidColorBrush x:Key="SecondaryBackgroundBrush" Color="#0A0A0A"/>
    <SolidColorBrush x:Key="TertiaryBackgroundBrush" Color="#1A1A1A"/>
    
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#A0A0A0"/>
    <SolidColorBrush x:Key="DisabledTextBrush" Color="#5A5A5A"/>
    
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#42A5F5"/>
    <SolidColorBrush x:Key="AccentPressedBrush" Color="#1976D2"/>
    
    <!-- Message Bubbles -->
    <SolidColorBrush x:Key="SentMessageBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="ReceivedMessageBrush" Color="#1A1A1A"/>
    
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#2A2A2A"/>
    
    <!-- Status Colors -->
    <SolidColorBrush x:Key="OnlineBrush" Color="#4CAF50"/>
    <SolidColorBrush x:Key="OfflineBrush" Color="#757575"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="#F44336"/>
    
    <!-- PSEUDO CODE: Pure black for OLED screens (battery saving) -->
    <!-- High contrast for better readability in dark environments -->

</ResourceDictionary>
